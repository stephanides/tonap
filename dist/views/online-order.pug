extends layout.pug

block headerStyle
  link(rel="stylesheet", href="./assets/css/bootstrap-reboot.min.css", media="screen")
  link(rel="stylesheet", href="./assets/css/bootstrap-grid.min.css", media="screen")
  link(rel="stylesheet", href="./assets/css/style.css", media="screen")

block content
  #wrapper
    .container-fluid.white
      .container.nav-menu
        .row.justify-content-between
          a.logo(href="/#")
            img(src="./assets/images/tonap_logo.svg", alt="")
          label.show-menu(for = 'show-menu')
            img(src="./assets/images/icons/menu.svg", alt="")
          input#show-menu(type = 'checkbox' role = 'button')
          ul#menu
            li
              a Domov
            li
              a Čo robíme?
            li
              a Kto sme?
            li
              a Naše produkty
            li
              a Kontakt
            li
              a.online-order Online objednávka
    .container.order-header
      h4 Online objednávka
      .order
        .row
          .col-12
            h5.pl-2.pt-4 1. Vyberte si produkty
            select.ml-2.mt-2#orderselect(onchange="showProduct()")
              option(value="kelimky" ) Masťovky a Kelímky
              option(value="odberniky" ) Petriho misky a odberníky
              option(value="skumavky" ) Skúmavky
        .row.mr-0.ml-0.mt-6#productKelimky
        .row.mr-0.ml-0.mt-6#productOdberniky
        .row.mr-0.ml-0.mt-6#productSkumavky
          
        .row
          .col-lg-6
            h5.pl-2 2. Detail objednávky
            table
              thead
                tr
                  th Názov produktu
                  th Množstvo
                  th Upraviť
              tbody#detailOrder
          .col-lg-6
            h5.pl-2 3. Dokončenie objednávky
            form.pl-2.mt-4
              p Meno a priezvisko/Názov firmy
              input(name="name" type="text" reqiured="true" placeholder="Vaše meno alebo názov firmy")
              p Adresa dodania
              input(name="adress" type="text" reqiured="true" placeholder="Vaša dodacia adresa")
              p E-mailová adresa
              input(name="email" type="text" reqiured="true" placeholder="Vaša e-mailová adresa")
              p Telefónne číslo
              input(name="tel" type="text" reqiured="true" placeholder="Vaše telefónne číslo")
              p IČO
              input(name="ico" type="text" reqiured="true" placeholder="Vaše IČO")
              p Správa
              textarea(name="message" rows="4") Správa pre nás
              input(name="submit" type="submit" value="Odoslať objednávku")
    .footer
      .container
        .row
          .footerlinks
            a(href="/obchodne-podmienky") Obchodné podmienky
            a(href="/reklamacne-podmienky") Reklamačné podmienky
            a(href="/cennik") Cenník PDF
            a(href="/ochrana-osobnych-udajov") Ochrana osobných údajov
        img(src="./assets/images/icons/logofooter.png", alt="")
        p &copy; Copyright 1998 - 2018 TONAP s.r.o.
    .modal.fade#orderModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
        .modal-dialog.modal-dialog-centered(role="document")
            .modal-content
              .modal-body
                .container
                  .row
                    .col-md-6
                      img.pt-2.d-block.mx-auto#orderModalMainImage
                    .col-md-6
                      h4.pt-4#orderMainTitle
                      p#isOrderSterilized
                      form(action="")
                        .form-group
                          h5.pt-2 Typ produktu
                            .choose
                              .form-check.form-check-inline#modalSterilne
                                input.form-check-input(type="radio" name="Sterilizacia" id="sterilizovany" value="sterilizovany")  
                                label.form-check-label(for="sterilizovany") Sterilný
                              .form-check.form-check-inline#modalNesterilne
                                input.form-check-input(type="radio" name="Sterilizacia" id="nesterilizovany" value="nesterilizovany")  
                                label.form-check-label(for="nesterilizovany") Nesterilný
                        .form-group
                          h5.pt-2 Balené
                            .choose
                              .form-check.form-check-inline#modalPackageType
                                input.form-check-input(type="radio" name="Balenie" id="balenie1" value="1")  
                                label.form-check-label(for="balenie1") Po 1 kuse
                              .form-check.form-check-inline
                                input.form-check-input(type="radio" name="Balenie" id="balenie2" value="20")  
                                label.form-check-label(for="balenie2") Po 20 kusov
                        .form-group
                          h5.pt-2 Veľkosť krabice
                            .choose
                              .form-check.form-check-inline#modalPackage
                                input.form-check-input(type="radio" name="Krabica" id="krabica1" value="500")  
                                label.form-check-label(for="krabica1") 500 ks
                              .form-check.form-check-inline
                                input.form-check-input(type="radio" name="Krabica" id="krabica2" value="1000")  
                                label.form-check-label(for="krabica2") 1000 ks
                        .form-group
                          h5.pt-2 Počet krabíc
                            .choose
                              input(type="number" id="modalPackageCount" min="1" step="1" value="1")

                      button.mt-4.mb-4#navigationOrder Pridať objednávku

  
    script(src="./assets/js/lazysizes.min.js", deffer)
    script(src="./assets/js/jquery-3.3.1.min.js")
    script(src="./assets/js/tonap.js")