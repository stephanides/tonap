extends layout.pug

//-block headerStyle
  //-link(rel="stylesheet", href="./assets/css/style.min.css", media="screen")
  // Main style
  include main-style.pug

block content
  #wrapper.lightgrey
    .container-fluid.white
      .container.nav-menu
        .row.justify-content-between
          a.logo(href="/")
            img(src="./assets/images/1.png", alt="Tonap s. r. o.")
          label.show-menu(for='show-menu')
            img(src="./assets/images/icons/menu.svg", alt="Tonap s. r. o.")
          input#show-menu(type='checkbox', role='button', aria-label="Zobraziť navigáciu")
          ul#menu
            li
              a(href="/") Domov
            li
              a(href="/#products") Čo robíme?
            li
              a(href="/#orderProduct") Naše produkty
            li
              a(href="/#aboutus") Kto sme?
            li
              a(href="/#contact") Kontakt
    .container.order-header
      h4 Pokladňa
      .order#order
        .row
          .col-lg-12
            h5.mt-3.mb-3.ml-3 1. Produkty v košíku
            table#orderTable
              thead
                tr
                  th(colspan = 1)
                  th.text-left Názov produktu
                  th.text-left Varianta
                  th.text-left Cena
                  th.text-left Množstvo
                  th.text-left Cena spolu
                  th.text-left Upraviť
              tbody#detailOrder
          .col-12
            form.pl-1.mt-4(onsubmit="sendOrder()")
              .row
                .col-lg-6.pl-4
                  h5 2. Fakturačné údaje
                  p Meno a priezvisko *
                  input(name="name" type="text" id = "name" placeholder="Vaše meno a priezvisko" required)
                  p Názov firmy
                  input(name="company" type="text" id = "company" placeholder="Názov firmy")
                  p Fakturačná adresa *
                  input(name="companyAdress" id="companyAdress" type="text" placeholder="Ulica" required)
                  input(name="companyCity" id="companyCity" type="text" placeholder="Mesto" class="mt-2" required)
                  input(name="companyPSC" id="companyPSC" type="text" placeholder="PSČ" class="mt-2" required)
                  p Adresa dodania (ak sa nezhoduje s fakturačnou adresou)
                  input(name="deliveryAdress" type="text" id="deliveryAdress" placeholder="Ulica" )
                  input(name="deliveryCity" type="text" id="deliveryCity" placeholder="Mesto" class="mt-2" )
                  input(name="deliveryPSC" type="text" id="deliveryPSC" placeholder="PSČ" class="mt-2" )
                  p E-mailová adresa *
                  input(name="email" type="text" id="email" reqiured="true" placeholder="Vaša e-mailová adresa" required)
                  p Telefónne číslo *
                  input(name="tel" type="text" id="phone" reqiured="true" placeholder="Vaše telefónne číslo" required)
                  p IČO
                  input(name="ico" type="text" id="ico" placeholder="Vaše IČO")
                  p Správa
                  textarea(name="message" id="message" rows="4" placeholder="Správa pre nás")
                  input(name="submit" type="submit" value="Odoslať objednávku")
                .col-lg-6
                  h5 3. Sumár košíka
                  .subtotal.d-flex.justify-content-between.pb-2.pr-4.pt-2.mt-4
                    p #[strong Medzisúčet:]
                    p.price.blue 550,00 €
                  .shipping.pt-4.pr-4
                    h6 Vyberte spôsob doručenia:
                    .shippingMethods.pt-4
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#geisOption(type="radio"  name="shippingMethods" checked)
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="geisOption")
                          p Geis kuriér
                          p.blue 1,50 €
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#postaOption(type="radio" name="shippingMethods")
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="postaOption") 
                          p Slovenská pošta kuriér
                          p.blue 1.90 €
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#osobnyOdberOption(type="radio" name="shippingMethods")
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="osobnyOdberOption")
                          p Osobný odber - Na hore 4, Košice
                          p.blue Zadarmo
                  .payments.pt-4.pr-4
                    h6 Vyberte spôsob platby:
                    .paymentsMethods.pt-4
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#kartaOption(type="radio"  name="paymentsMethods" disabled)
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="kartaOption")
                          p Platba kartou online
                          p.blue Zadarmo
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#prevodOption(type="radio" name="paymentsMethods" disabled)
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="prevodOption") 
                          p Bankovým prevodom
                          p.blue Zadarmo
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#paypalOption(type="radio" name="paymentsMethods" disabled)
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="paypalOption") 
                          p Paypal
                          p.blue Zadarmo
                      .custom-control.custom-radio.mt-2
                        input.custom-control-input#dobierkaOption(type="radio" name="paymentsMethods")
                        label.pl-2.custom-control-label.d-flex.align-items-center.justify-content-between(for="dobierkaOption")
                          p Dobierka
                          p.blue 1,50 €
                  .total.d-flex.justify-content-between.pb-2.pt-2.mt-2.pr-4
                    p #[strong Cena spolu:]
                    p.price.blue 555,00 €
    
    include footer.pug

    .modal.fade#orderModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
        .modal-dialog.modal-dialog-centered(role="document")
            .modal-content
              .modal-header.justify-content-end
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
              .modal-body
                .container
                  .row
                    .col-md-6.d-flex.justify-content-center.align-items-center
                      img.pt-2.d-block.mx-auto#orderModalMainImage
                    .col-md-6
                      h4.pt-4#orderMainTitle
                      p#isOrderSterilized
                      form(action="")
                        .form-group
                          h5.pt-2 Typ produktu
                          .choose
                            .form-check.form-check-inline#modalSterilne
                              input.form-check-input(type="radio" name="Sterilizacia" id="sterilizovany" value=true onclick="chooseSterility(0)")  
                              label.form-check-label(for="sterilizovany") Sterilný
                            .form-check.form-check-inline#modalNesterilne
                              input.form-check-input(type="radio" name="Sterilizacia" id="nesterilizovany" value=false onclick="chooseSterility(1)")  
                              label.form-check-label(for="nesterilizovany") Nesterilný
                        .form-group
                          h5.pt-2 Počet kusov v sáčku
                          .choose
                            .form-check.form-check-inline#modalPackageType1
                              input.form-check-input(type="radio" name="Balenie" id="balenie1" value="1")  
                              label.form-check-label#labelBalenie1(for="balenie1") 
                            .form-check.form-check-inline#modalPackageType2
                              input.form-check-input(type="radio" name="Balenie" id="balenie2" value="20")  
                              label.form-check-label#labelBalenie2(for="balenie2")
                            p.alert#nonPackageType Zvoľte typ produktu
                        .form-group
                          h5.pt-2 Počet kusov v krabici
                          .choose
                            .form-check.form-check-inline#modalPackage1
                              input.form-check-input(type="radio" name="Krabica" id="krabica1" value="500")  
                              label.form-check-label#package1(for="krabica1")
                            .form-check.form-check-inline#modalPackage2
                              input.form-check-input(type="radio" name="Krabica" id="krabica2" value="1000")  
                              label.form-check-label#package2(for="krabica2")
                            p.alert#nonPackage Zvoľte typ produktu
                        .form-group
                          h5.pt-2 Počet krabíc
                          .choose.productItemsCount.position-relative
                            input(type="number" id="modalPackageCount" min="1" step="1" value="1")

                      button.mt-4.mb-4#navigationOrder Pridať do objednávky
    .modal.fade#successOrder
      .modal-dialog
        .modal-content
          .modal-header.justify-content-end
                button(type="button", class="close", data-dismiss="modal", aria-label="Close")
                  span(aria-hidden="true") &times;
          .modal-body.text-center.position-relative
            h4.modal-title.text-center.position-absolute Ďakujeme!
            p Vaša objednávka bola úspešne odoslaná!#[br]Bližšie informácie Vám boli zaslané na Váš email. 
          .modal-footer
            button.btn.btn-danger(type="button", data-dismiss="modal", aria-label="Close") Zavrieť
    
    script(src="./assets/js/socket.io.slim.js", deffer)
    script(src="./assets/js/lazysizes.min.js", deffer)
    script(src="./assets/js/jquery-3.3.1.min.js")
    //-script(src="./assets/js/tonap.js")
    script(src="./assets/js/tonap.min.js")