extends layout.pug

block headerStyle
  link(rel="stylesheet", href="./assets/css/bootstrap-reboot.min.css", media="screen")
  link(rel="stylesheet", href="./assets/css/bootstrap-grid.min.css", media="screen")
  link(rel="stylesheet", href="./assets/css/style.css", media="screen")

block content
  #wrapper
    .container-fluid.white#navMenu
      .container.nav-menu
        .row.justify-content-between
          a.logo(href="")
            img(src="./assets/images/tonap_logo.svg", alt="")
          label.show-menu(for = 'show-menu')
            img(src="./assets/images/icons/menu.svg", alt="")
          input#show-menu(type = 'checkbox' role = 'button')
          ul#menu
            li
              a(onclick="goto('#header')") Domov
            li
              a(onclick="goto('#products')") Čo robíme?
            li
              a(onclick="goto('#orderProduct')") Naše produkty
            li
              a(onclick="goto('#aboutus')") Kto sme?
            li
              a(onclick="goto('#contact')") Kontakt
            li
              a.online-order(href="/online-objednavka") Online objednávka
    section#header
      .container-fluid
        .container
          .row.align-items-center
            .col-6.header-text
              h6 Najkvalitnejšie
              h3 ZDRAVOTNÍCKE
              h3 POTREBY
              button(onclick="goto('#orderProduct')") Pozrieť produkty
            .col-6
              picture
                source(data-srcset="./assets/images/woman.webp", alt="", type="image/webp")
                img.lazyload(data-src="./assets/images/woman.png", alt="")
    section#products
      .container
        .row.justify-content-between
          .col-md-4
            .icon
              picture
                source(data-srcset="./assets/images/icons/firstcard.webp", alt="", type="image/webp")
                img.lazyload(data-src="./assets/images/icons/firstcard.png", alt="")
              .textarea
                p Vyrobili sme
                h4 #[span.count 10000] ks
            h4 Výroba kelimkov <br>na lieky a krémy
            .divider
            p Macaroon brownie cake carrot cake. Sesame snaps sweet icing cake sweet roll. Tart halvah tiramisu sweet liquorice bear claw. Tart cotton candy chupa chups lolipoop tart pastrz liquorice muffin.
          .col-md-4
            .icon
              picture
                source(data-srcset="./assets/images/icons/secondcard.webp", alt="", type="image/webp")
                img.lazyload(data-src="./assets/images/icons/secondcard.png", alt="")
              .textarea
                p Vyrobili sme
                h4 #[span.count 10000] ks
            h4 Výroba skúmaviek <br>a odberníkov
            .divider
            p Macaroon brownie cake carrot cake. Sesame snaps sweet icing cake sweet roll. Tart halvah tiramisu sweet liquorice bear claw. Tart cotton candy chupa chups lolipoop tart pastrz liquorice muffin.
          .col-md-4
            .icon
              picture
                source(data-srcset="./assets/images/icons/thirdcard.webp", alt="", type="image/webp")
                img.lazyload(data-src="./assets/images/icons/thirdcard.png", alt="")
              .textarea
                p Vyrobili sme
                h4 #[span.count 10000] ks
            h4 Výroba stojanov <br>na skúmavky
            .divider
            p Macaroon brownie cake carrot cake. Sesame snaps sweet icing cake sweet roll. Tart halvah tiramisu sweet liquorice bear claw. Tart cotton candy chupa chups lolipoop tart pastrz liquorice muffin.
    
    section#orderProduct
      .container.text-center
        h4 Naše produkty
        p Sweet powder topping cupcake fruitcake liquorice cookie.
        .row
          .mainselect
            select.ml-2.mt-2#mainselect(onchange="showProductMainpage()")
              option(value="kelimky" ) Masťovky a Kelímky
              option(value="odberniky" ) Petriho misky a odberníky
              option(value="skumavky" ) Skúmavky
      .container.mt-5
        .row#productKelimky
        .row#productOdberniky
        .row#productSkumavky
    section#aboutus
      .container
        .row
          .col-lg-6.col-12
            picture
              source(data-srcset="./assets/images/aboutus.webp", alt="", type="image/webp")
              img.lazyload(data-src="./assets/images/aboutus.png", alt="")
          .col-lg-6.col-12
            h3 Sme 20 rokov súčasťou <br> zdravotníctva na Slovensku
            .divider
            p Sweet poweder topping cupcake fruitcake liquorice cookie. Liquorice apple pie apple pie fruitcake pie oat cake carrot cake lemon drops. Wafet pastry marshmallow cotoon candy pastry marzipan. Cake fruit cake brownie cupcake gingerbread. Tiramius gummies icing halvah. Cake muffin icing liquorice jelly cookie sweet.
            button Kontaktujte nás
    .container-fluid.contact.position-relative#contact
      .row
        .col-lg-6.col-12.pr-0.pl-0
          #map
        .col-lg-6.col-12.pl-0.pr-0.right
      .container.position-absolute.top.ml-50.contactHolder
        .row
          .col-lg-6.col-12.pl-0.order-2
            .contactform
              h5 Kontaktný formulár
              form
                input(name="name" type="text" reqiured="true" placeholder="Meno a priezvisko")
                input(name="email" type="text" reqiured="true" placeholder="Váš email")
                input(name="subject" type="text" reqiured="true" placeholder="Predmet")
                textarea(name="message" rows="4") Text správy
                input(name="submit" type="submit" value="Odoslať správu")
            .contactcard
              h4 Kontakt
              p TONAP s.r.o.
              p Bottova 1099/2
              p 075 01 Trebišov
              p &nbsp;
              p #[strong IČO:] 51334011
              p #[strong IČ DPH:] SK2120679242
              p &nbsp;
              .info
                img.infoicon(src="./assets/images/icons/envelope.svg", alt="")
                p info@tonap.sk
              .info
                img.infoicon(src="./assets/images/icons/phone.svg", alt="")
                p +421 918 243 753
          .col-md-6.order-1
    .footer
      .container
        .row
          .footerlinks
            a(href="/obchodne-podmienky") Obchodné podmienky
            a(href="/reklamacne-podmienky") Reklamačné podmienky
            a(href="/cennik") Cenník PDF
            a(href="/ochrana-osobnych-udajov") Ochrana osobných údajov
        img(src="./assets/images/icons/logofooter.png", alt="")
        p &copy; Copyright 1998 - 2018 TONAP s.r.o.
    .modal.fade#productModal(tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true")
        .modal-dialog.modal-dialog-centered(role="document")
            .modal-content
              .modal-body
                .container
                  .row
                    .col-md-6
                      img.pt-2.d-block.mx-auto#productModalMainImage
                    .col-md-6
                      h4.pt-4#mainTitle
                      p#isSterilized
                      p#productDescription
                      h5.pt-2 Parametre produktu
                      p.mb-0#productHeight
                      p.mb-0#productDepth
                      p.mb-0#productVolume
                      p.mb-0#productWeight
                      button.mt-4.mb-4#navigationOrder Prejsť do objednávky
                      
      

      
            

